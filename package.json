{
  "name": "braving-grief-website",
  "version": "1.0.0",
  "description": "Official website for Braving Grief by Tasneem Rahman",
  "main": "index.html",
  "scripts": {
    "dev": "node ./node_modules/tailwindcss/lib/cli.js -i ./css/input.css -o ./css/output.css --watch",
    "build": "node ./node_modules/tailwindcss/lib/cli.js -i ./css/input.css -o ./css/output.css --minify",
    "postinstall": "chmod +x ./node_modules/.bin/tailwindcss || true",
    "serve": "npx serve .",
    "deploy": "npm run build && powershell Write-Host 'Ready for deployment'"
  },
  "keywords": [
    "grief",
    "islamic-counseling",
    "healing",
    "tasneem-rahman",
    "mental-health"
  ],
  "author": "Tasneem Rahman",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  }
}